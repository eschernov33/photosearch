<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:minHeight="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewPhotoInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivPhoto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivUserIcon"
                android:layout_width="@dimen/icon_size_42"
                android:layout_height="@dimen/icon_size_42"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/RoundedImageViewRounded" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintStart_toEndOf="@id/ivUserIcon"
                app:layout_constraintTop_toTopOf="@id/ivUserIcon"
                app:layout_constraintVertical_bias="0.4"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Johnny" />

            <TextView
                android:id="@+id/tvPhotoTags"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvUserName"
                app:layout_constraintBottom_toBottomOf="@id/ivUserIcon"
                app:layout_constraintStart_toStartOf="@id/tvUserName"
                tools:text="Photo tags" />

            <ImageView
                android:id="@+id/tvIconPhotoViews"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_photo_shows"
                app:layout_constraintTop_toBottomOf="@id/ivUserIcon"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/tvPhotoViews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="@id/tvIconPhotoViews"
                app:layout_constraintBottom_toBottomOf="@id/tvIconPhotoViews"
                app:layout_constraintStart_toEndOf="@id/tvIconPhotoViews"
                tools:text="100000 views" />

            <ImageView
                android:id="@+id/tvIconPhotoDownloads"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_download"
                app:layout_constraintTop_toBottomOf="@id/tvIconPhotoViews"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/tvPhotoDownloads"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintStart_toEndOf="@id/tvIconPhotoDownloads"
                app:layout_constraintTop_toTopOf="@id/tvIconPhotoDownloads"
                app:layout_constraintBottom_toBottomOf="@id/tvIconPhotoDownloads"
                tools:text="54000 donwloads" />

            <TextView
                android:id="@+id/tvPhotoLikes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPhotoDownloads"
                tools:text="54000 likes" />

            <TextView
                android:id="@+id/tvPhotoComments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPhotoLikes"
                tools:text="54000 comments" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btnOpenInBrowser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Открыть в браузере"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewPhotoInfo" />


</androidx.constraintlayout.widget.ConstraintLayout>